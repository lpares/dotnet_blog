@page
@using Blog.Data
@using Microsoft.AspNetCore.Identity
@using Blog.Models
@inject ApplicationDbContext DbContext
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var articles = DbContext.Articles
                .OrderByDescending(c => c.UpdatedDate)
                .ToList();

    var isAdmin = false;
    if (SignInManager.IsSignedIn(User))
    {
        var currentUser = UserManager.GetUserAsync(User).Result;
        if (currentUser != null)
        {
            isAdmin = UserManager.IsInRoleAsync(currentUser, "Admin").Result;
        }
    }
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
        color: #333;
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
    }

    h1.text-center {
        text-align: center;
        margin-bottom: 30px;
        color: #2c3e50;
        font-size: 1.8em;
        position: relative;
        padding-bottom: 10px;
    }

        h1.text-center:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background-color: #ff8c00;
        }

    .article {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 25px;
        border-left: 4px solid #ffa500;
        transition: all 0.3s ease;
    }

        .article:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .article-actions {
        display: flex;
        gap: 10px;
        margin-bottom: 15px;
        justify-content: flex-end;
    }

    .btn-edit, .btn-delete {
        padding: 8px 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .btn-edit {
        background: #ffa500;
        color: white;
    }

        .btn-edit:hover {
            background: #ff8c00;
        }

    .btn-delete {
        background: #ff6b35;
        color: white;
    }

        .btn-delete:hover {
            background: #e65c2b;
        }

    .delete-form {
        margin: 0;
    }

    .article-content {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .article-text {
        flex: 1;
        min-width: 0;
    }

    .article-title {
        font-size: 1.4em;
        color: #2c3e50;
        margin: 0 0 10px 0;
        font-weight: 600;
    }

    .article-preview {
        color: #555;
        margin-bottom: 10px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 0.95em;
    }

    .article-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 15px;
        border-top: 1px solid #eee;
    }

    .article a {
        display: inline-block;
        padding: 8px 16px;
        background: #ffa500;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .article a:hover {
            background: #ff8c00;
            transform: translateY(-2px);
        }

    .comment-count {
        display: inline-block;
        padding: 6px 12px;
        background: #fff3e6;
        color: #ff6b35;
        border-radius: 20px;
        font-size: 0.9em;
        font-weight: 600;
        border: 1px solid #ffdab9;
    }

    .article-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
        font-size: 0.85em;
        color: #777;
    }

    .article-date {
        color: #999;
        font-style: italic;
    }

    .article-preview {
        white-space: normal;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .article-actions {
        justify-content: flex-start;
        flex-wrap: wrap;
    }

    .btn-edit, .btn-delete {
        flex: 1 1 100%;
        margin-bottom: 5px;
    }

    }
</style>

<div>
    <h1 class="text-center">Là où je parle et où je donne mon avis</h1>

    @if (isAdmin)
    {
        <form asp-controller="Articles" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn-edit text-center">
                Ecrire un nouvel article
            </button>
        </form>
    }
    <br />

    <div>
        @foreach (var article in articles)
        {
            var nbComments = DbContext.Comments.Count(comment => comment.IdArticle == article.Id);

            <div class="article">
                @if (isAdmin)
                {
                    <div class="article-actions">
                        <a asp-page="/Admin/EditArticle" asp-route-id="@article.Id" class="btn-edit">Editer</a>
                        <form asp-page="/Admin/DeleteArticle" asp-route-id="@article.Id" method="post" class="delete-form">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn-delete">Supprimer</button>
                        </form>
                    </div>
                }

                <div class="article-content">
                    <div class="article-text">
                        <div class="article-title">@article.Title</div>
                        <div class="article-preview">@article.Content</div>
                        <div class="article-meta">
                            <span class="article-date">Mis à jour le @article.UpdatedDate.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>
                </div>

                <div class="article-footer">
                    <a asp-controller="Pages" asp-action="Article" asp-route-id="@article.Id">Lire l'article</a>
                    <span class="comment-count">💬 @nbComments</span>
                </div>
            </div>
        }
    </div>
</div>
